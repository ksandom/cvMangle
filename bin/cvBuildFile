#!/bin/bash

inFile="${1:-cvData/cvData.md}"
tmpFile="/tmp/$$-cv.md"
variant="$2"
suggestedVersion="${3:-0}"

function suggestName
{
  echo "$(date +%Y-%m-%d).$1"
}

function getFileName
{
  local name="$1"
  local variantText="$2"

  if [ "$variantText" == '' ]; then
    echo "$name-cv-$whoCamel.pdf"
  else
    echo "$name-cv-$whoCamel-$variantText.pdf"
  fi
}



if [ "$variant" == '' ]; then
  echo "Varient not specified, so using the default."
  variant="full"
fi

echo "Variant: $variant"


if [ -e .cvConfig ]; then
  echo "Found config."
  . .cvConfig
else
  echo ".cvConfig not found. Weird things will happen. Make sure to run cvSetWho."
fi

filters=""

colsFile=~/.config/cvMangle/lib/lua/cols.lua
if [ -e "$colsFile" ]; then
  filters="--lua-filter=$colsFile "
  echo "Filters: \"$filters\""
else
  echo "No filters."
fi


name="$(suggestName "$suggestedVersion")"
outFile="$(getFileName "$name" "$variant")"

if [ "$CV_NO_AUTO" == '' ]; then
  let attempt=0
  while [ -e "$outFile" ]; do
    let attempt=$attempt+1
    echo "$outFile already exists. Trying the next iteration."
    name="$(suggestName $attempt)"
    outFile="$(getFileName "$name" "$variant")"
  done
else
  echo "CV_NO_AUTO is set to \"$CV_NO_AUTO\". Using the suggested version number of $suggestedVersion."
  echo "File out: \"$outFile\" ."
fi

echo "Preparing input: $tmpFile."
sed 's/~!today!~/'$name'/g;s/~!whoNatural!~/'"$whoNatural"'/g;s/~!whoCamel!~/'"$whoCamel"'/g;s/~!variant!~/'"${variant^}"'/g' "$inFile" > "$tmpFile"

if [ "$variant" != '' ]; then
  mkdir -p old
  echo "Moving old versions to old/."
  mv -v *-$variant.pdf* old
fi

echo "Writing to \"$outFile\""

pandoc $filters--pdf-engine xelatex "$tmpFile" -o "$outFile"

rm -f "$tmpFile"
