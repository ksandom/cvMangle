#!/bin/bash

function listParts
{
    ls -1 | sort
}

function doCompile
{
    name="$1"
    variantPath="cvData/variant/$name"
    outFile="../../compiled/$name.md"

    if [ ! -e "$variantPath" ]; then
        echo "Could not find variant \"$name\" in \"$variantPath\" from \"$(pwd)\"."
        exit 1
    fi

    cd "$variantPath"

    echo "Compiling \"$name\"."
    cat `listParts` > "$outFile"

    cd ../../..
}


if [ "$1" == '' ]; then
    while read variant; do
        doCompile "$variant"
    done < <(cvList)
else
    doCompile "$1"
fi
