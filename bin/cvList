#!/bin/bash
# List all cv variants.

function listVariants
{
    cd cvData/variant
    ls -1 | sed 's/\.md$//g'
}

function listSrc
{
    cd cvData
    find | cut -b3- | grep ^src | sort
}

case "$1" in
    "variants")
        listVariants
    ;;
    "src")
        listSrc
    ;;
    *)
        listVariants
    ;;
esac

